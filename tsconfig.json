{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "DOM"
    ],
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
