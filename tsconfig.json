{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es6",
      "DOM"
    ],
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
}
